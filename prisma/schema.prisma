generator client {
  provider = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
model Company {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  name    String
  address String
}
model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String @unique
  password String
  name     String?
}

 

model HouseSymptoms {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  label         String
  description   String   // A required string field for the symptom description
  createdAt     DateTime @default(now())      // A required date-time field for the creation timestamp
  additionalInfo String? // Optional string field for any additional information
}